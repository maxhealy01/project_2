<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Here and Now</title>
  <link rel="stylesheet" href="/stylesheets/style.css">
  <script>
    function getGeoLocation() {
      navigator.geolocation.getCurrentPosition(setSessionCoords);
    }

    function setSessionCoords(position) {
      sessionStorage.setItem("coords", position.coords)
      sessionStorage.setItem("latitude", position.coords.latitude)
      sessionStorage.setItem("longitude", position.coords.longitude)
    }

    window.onload = getGeoLocation()
  </script>
</head>

<body>
  <div class="wrapper">
    <header>
      <h1>
        <a href="/">Here and Now</a>
      </h1>
      <nav>
        <a href="/map">Map</a>
        {{#if loggedIn}}
        <a href="/inbox">Inbox</a>
        <button id="logout" class="btn-no-style">logout</button>
        {{else}}
        <a href="/login">login</a>
        {{/if}}
      </nav>
    </header>
    <main>
      {{{ body }}}
    </main>
    <footer>
      Thanks for visiting!
    </footer>
  </div>
  {{#if loggedIn}}
  <script src="/javascript/logout.js"></script>
  {{/if}}
</body>

</html>